<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Activity.AddCourse">

        <TextView
            android:id="@+id/acStartTv"
            android:layout_width="267dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Select Date"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="133dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date:"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="204dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name:"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="76dp" />

        <Spinner
            android:id="@+id/acStatusSpinner"
            android:layout_width="279dp"
            android:layout_height="33dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="76dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date:"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="133dp" />

        <TextView
            android:id="@+id/acEndtv"
            android:layout_width="273dp"
            android:layout_height="31dp"
            android:clickable="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Select Date"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="204dp" />

        <Switch
            android:id="@+id/acAlertSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Alerts"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="268dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="179dp"
            android:layout_height="54dp"
            android:text="Notification on date course starts and ends"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="268dp" />

        <Button
            android:id="@+id/acSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="359dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="250dp"
            android:layout_height="22dp"
            android:text="Course Title"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="25dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>